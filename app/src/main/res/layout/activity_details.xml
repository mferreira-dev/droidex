<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:id="@+id/rlDetails"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        card_view:cardCornerRadius="12dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0">

            <TableRow>

                <androidx.cardview.widget.CardView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    card_view:cardCornerRadius="12dp">

                    <LinearLayout
                        android:id="@+id/llDetailsEntry"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvDetailsNumber"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:textColor="#616161"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/tvDetailsName"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:textColor="#616161"
                                android:textSize="18sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginRight="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvDetailsSpecies"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginBottom="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvDetailsType1"
                                    android:layout_gravity="bottom"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    card_view:cardCornerRadius="12dp"
                                    android:layout_margin="4dp">

                                    <TextView
                                        android:id="@+id/tvDetailsType1"
                                        android:textStyle="bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="4dp"
                                        android:textColor="#ffffff"
                                        android:textSize="18sp"/>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvDetailsType2"
                                    android:layout_gravity="bottom"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    card_view:cardCornerRadius="12dp"
                                    android:layout_margin="4dp">

                                    <TextView
                                        android:id="@+id/tvDetailsType2"
                                        android:textStyle="bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="4dp"
                                        android:textColor="#ffffff"
                                        android:textSize="18sp"/>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/rlDetailsSprite"
                    android:layout_width="120dp"
                    android:layout_height="120dp">

                    <ImageView
                        android:id="@+id/ivDetailsSprite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ProgressBar
                        android:id="@+id/detailsSpriteProgress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

            </TableRow>

        </TableLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="center"
                android:text="Species"
                android:textSize="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                card_view:cardCornerRadius="12dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="16dp"
                        card_view:cardCornerRadius="12dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <TextView
                            android:layout_margin="8dp"
                            android:id="@+id/tvDetailsSpeciesFlavorText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/tvDetailsDexEntryGame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                card_view:cardCornerRadius="12dp"
                                android:layout_height="wrap_content"
                                android:layout_width="100dp">

                                <TextView
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/tvDetailsHeight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"/>

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_gravity="center"
                                android:text="Height"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                card_view:cardCornerRadius="12dp"
                                android:layout_height="wrap_content"
                                android:layout_width="100dp">

                                <TextView
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/tvDetailsWeight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"/>

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_gravity="center"
                                android:text="Weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_gravity="center"
                android:text="Abilities"
                android:textSize="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                card_view:cardCornerRadius="12dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            card_view:cardCornerRadius="12dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content">

                            <TextView
                                android:textColor="#ffffff"
                                android:id="@+id/tvDetailsAbilitiesSlot1"
                                android:gravity="center"
                                android:layout_width="150dp"
                                android:layout_height="30dp"/>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_gravity="center"
                            android:text="or"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <androidx.cardview.widget.CardView
                            android:layout_margin="8dp"
                            card_view:cardCornerRadius="12dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content">

                            <TextView
                                android:textColor="#ffffff"
                                android:id="@+id/tvDetailsAbilitiesSlot2"
                                android:gravity="center"
                                android:layout_width="150dp"
                                android:layout_height="30dp"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_margin="8dp"
                            card_view:cardCornerRadius="12dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content">

                            <TextView
                                android:textColor="#ffffff"
                                android:id="@+id/tvDetailsAbilitiesSlotHidden"
                                android:gravity="center"
                                android:layout_width="330dp"
                                android:layout_height="30dp"/>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_gravity="center"
                            android:text="Hidden"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_gravity="center"
                android:text="Base Stats"
                android:textSize="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                card_view:cardCornerRadius="12dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        card_view:cardCornerRadius="12dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <TableLayout
                            android:stretchColumns="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow>

                                <androidx.cardview.widget.CardView
                                    card_view:cardCornerRadius="12dp"
                                    android:layout_height="30dp"
                                    android:layout_width="100dp">

                                    <TextView
                                        android:textColor="#ffffff"
                                        android:id="@+id/tvDetailsHpStatLabel"
                                        android:gravity="center"
                                        android:text="HP"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/tvDetailsHpStat"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </TableRow>

                        </TableLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        card_view:cardCornerRadius="12dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <TableLayout
                            android:stretchColumns="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow>

                                <androidx.cardview.widget.CardView
                                    card_view:cardCornerRadius="12dp"
                                    android:layout_height="30dp"
                                    android:layout_width="100dp">

                                    <TextView
                                        android:textColor="#ffffff"
                                        android:id="@+id/tvDetailsAttackStatLabel"
                                        android:gravity="center"
                                        android:text="Attack"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/tvDetailsAttackStat"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </TableRow>

                        </TableLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        card_view:cardCornerRadius="12dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <TableLayout
                            android:stretchColumns="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow>

                                <androidx.cardview.widget.CardView
                                    card_view:cardCornerRadius="12dp"
                                    android:layout_height="30dp"
                                    android:layout_width="100dp">

                                    <TextView
                                        android:textColor="#ffffff"
                                        android:id="@+id/tvDetailsDefenseStatLabel"
                                        android:gravity="center"
                                        android:text="Defense"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/tvDetailsDefenseStat"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </TableRow>

                        </TableLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        card_view:cardCornerRadius="12dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <TableLayout
                            android:stretchColumns="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow>

                                <androidx.cardview.widget.CardView
                                    card_view:cardCornerRadius="12dp"
                                    android:layout_height="30dp"
                                    android:layout_width="100dp">

                                    <TextView
                                        android:textColor="#ffffff"
                                        android:id="@+id/tvDetailsSpecialAttackStatLabel"
                                        android:gravity="center"
                                        android:text="Sp. Attack"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/tvDetailsSpecialAttackStat"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </TableRow>

                        </TableLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        card_view:cardCornerRadius="12dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <TableLayout
                            android:stretchColumns="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow>

                                <androidx.cardview.widget.CardView
                                    card_view:cardCornerRadius="12dp"
                                    android:layout_height="30dp"
                                    android:layout_width="100dp">

                                    <TextView
                                        android:textColor="#ffffff"
                                        android:id="@+id/tvDetailsSpecialDefenseStatLabel"
                                        android:gravity="center"
                                        android:text="Sp. Defense"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/tvDetailsSpecialDefenseStat"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </TableRow>

                        </TableLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        card_view:cardCornerRadius="12dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <TableLayout
                            android:stretchColumns="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow>

                                <androidx.cardview.widget.CardView
                                    card_view:cardCornerRadius="12dp"
                                    android:layout_height="30dp"
                                    android:layout_width="100dp">

                                    <TextView
                                        android:textColor="#ffffff"
                                        android:id="@+id/tvDetailsSpeedStatLabel"
                                        android:gravity="center"
                                        android:text="Speed"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/tvDetailsSpeedStat"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </TableRow>

                        </TableLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="TOTAL: "
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvDetailsBaseStatsTotal"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_gravity="center"
                android:text="Moves"
                android:textSize="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                card_view:cardCornerRadius="12dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvMoveMethod1"
                            android:layout_margin="8dp"
                            card_view:cardCornerRadius="12dp"
                            android:layout_width="70dp"
                            android:layout_height="30dp">

                            <TextView
                                android:textColor="#ffffff"
                                android:id="@+id/tvMoveMethod1"
                                android:gravity="center"
                                android:text="Level up"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvMoveMethod2"
                            android:layout_margin="8dp"
                            card_view:cardCornerRadius="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textColor="#ffffff"
                                android:id="@+id/tvMoveMethod2"
                                android:gravity="center"
                                android:text="TM"
                                android:layout_width="70dp"
                                android:layout_height="30dp"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvMoveMethod3"
                            android:layout_margin="8dp"
                            card_view:cardCornerRadius="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textColor="#ffffff"
                                android:id="@+id/tvMoveMethod3"
                                android:gravity="center"
                                android:text="Egg"
                                android:layout_width="70dp"
                                android:layout_height="30dp"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvMoveMethod4"
                            android:layout_margin="8dp"
                            card_view:cardCornerRadius="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textColor="#ffffff"
                                android:id="@+id/tvMoveMethod4"
                                android:gravity="center"
                                android:text="Tutor"
                                android:layout_width="70dp"
                                android:layout_height="30dp"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                card_view:cardCornerRadius="12dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:gravity="center"
                            android:textSize="18dp"
                            android:layout_weight="1"
                            android:text="Name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:gravity="center"
                            android:textSize="18dp"
                            android:layout_weight="1"
                            android:text="Power"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:gravity="center"
                            android:textSize="18dp"
                            android:layout_weight="1"
                            android:text="Accuracy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:gravity="center"
                            android:textSize="18dp"
                            android:layout_weight="1"
                            android:text="PP"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/movesRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_gravity="center"
                android:text="Damage taken"
                android:textSize="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                card_view:cardCornerRadius="12dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:text="Weaknesses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

